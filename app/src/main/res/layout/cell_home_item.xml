<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/home_item_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/prof3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

      <TextView
          android:id="@+id/profile_username"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#424141"
          android:layout_toRightOf="@+id/profile_image"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/josefin_sans_bold"
          android:text="karan biswal"
          android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_dm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/chat" />



      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/profile_image"
          android:id="@+id/card_post_image"
          app:cardCornerRadius="8dp"
          android:layout_margin="5dp"
          android:elevation="10dp">

          <ImageView
              android:id="@+id/roundedImageView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scaleType="fitCenter"
              />
      </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_post_location_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_post_image"
        android:text="chakeisiani"
        android:fontFamily="@font/lato"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_post_rent_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_post_location_home"
        android:text="Rs 3000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
      


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
       android:layout_below="@id/card_post_image"
       android:text="300 sq"
       android:layout_marginTop="20dp"
         android:id="@+id/tv_home_area"
       android:textSize="20sp"
       android:textColor="#686868"
       android:layout_marginRight="10dp"/>







  </RelativeLayout>

</androidx.cardview.widget.CardView>