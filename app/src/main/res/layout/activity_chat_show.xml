<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".chatShow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECT"
        android:fontFamily="@font/josefin_sans_bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_connect_show"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with"
        android:fontFamily="@font/lato"
        android:layout_toRightOf="@id/tv_connect_show"
        android:layout_marginTop="150dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTHERS"
        android:fontFamily="@font/josefin_sans_bold"
        android:layout_below="@id/tv_connect_show"
        android:id="@+id/tv_other_show"
        android:textSize="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="#ACA907"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/groupchat2"
        android:layout_below="@id/tv_other_show"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rounded_arrow"
        android:id="@+id/btn_run_chat"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:tint="@android:color/white"
        android:backgroundTint="#4E525B"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        app:fabCustomSize="70dp"/>





</RelativeLayout>